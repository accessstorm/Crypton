# API Keys
NEXT_PUBLIC_GEMINI_API_KEY=your-gemini-api-key-here
NEXT_PUBLIC_COINGECKO_API_KEY=your-coingecko-api-key-here

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Docker Deployment (optional)
# These variables are used when deploying with Docker
# DOCKER_PORT=3000               # Port to expose in Docker
# DOCKER_HOSTNAME=0.0.0.0        # Host to bind to in Docker 

# Render Deployment
# These will be set in Render's environment variables dashboard
# RENDER_EXTERNAL_URL=your-render-assigned-domain
PORT=10000 